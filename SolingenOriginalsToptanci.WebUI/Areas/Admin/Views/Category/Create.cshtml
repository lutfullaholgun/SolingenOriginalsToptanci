@model SolingenOriginalsToptanci.Models.ViewModels.CategoryCreateViewModel

@{
    ViewData["Title"] = "Yeni Kategori Ekle";
}

<h2>@ViewData["Title"]</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label">Kategori Adı</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Slug" class="form-label">Slug</label>
        <input asp-for="Slug" class="form-control" />
        <span asp-validation-for="Slug" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="GroupName" class="form-label">Grup Adı</label>
        <input asp-for="GroupName" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="ParentCategoryId" class="form-label">Üst Kategori</label>
        <select asp-for="ParentCategoryId" class="form-select"
                asp-items="Model.PossibleParents">
            <option value="">-- Ana Kategori --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
