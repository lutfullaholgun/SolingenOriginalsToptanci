@using SolingenOriginalsToptanci.Models.ViewModels
@model LoginViewModel


<div class="admin-login-container">
    <h2><i class="fas fa-lock"></i> Admin Girişi</h2>
    
    <form asp-area="Admin" asp-controller="AdminAccount" asp-action="AdminLogin" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="admin@solingen.com">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        
        <div class="form-check">
            <input asp-for="RememberMe" class="form-check-input">
            <label asp-for="RememberMe" class="form-check-label"></label>
        </div>
        
        <button type="submit" class="btn btn-primary">Giriş Yap</button>
    </form>
</div>