@using SolingenOriginalsToptanci.Models.Entities
@model List<Category>

@{
    ViewData["Title"] = "Kategoriler";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center text-warning">Kategori Listesi</h2>

    <div class="text-end mb-3">
        <a class="btn btn-success" href="@Url.Action("Create")">
            <i class="fas fa-plus"></i> Yeni Kategori
        </a>
    </div>

    <table class="table table-bordered table-hover bg-white shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Ad</th>
                <th>Üst Kategori</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@(category.ParentCategory != null ? category.ParentCategory.Name : "-")</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", new { id = category.Id })">
                            <i class="fas fa-edit"></i> Düzenle
                        </a>
                        <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = category.Id })">
                            <i class="fas fa-trash-alt"></i> Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
