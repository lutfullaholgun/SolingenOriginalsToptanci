@using SolingenOriginalsToptanci.Models.Entities
@model Category
@{
    ViewData["Title"] = "Kategori Düzenle";
}

<div class="container mt-5">
    <h2 class="text-warning mb-4 text-center">Kategori Düzenle</h2>

    <div class="card shadow p-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold">Kategori Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ParentCategoryId" class="form-label fw-bold">Üst Kategori</label>
                <select asp-for="ParentCategoryId" class="form-select"
                        asp-items="@(new SelectList(ViewBag.ParentCategories, "Id", "Name"))">
                    <option value="">--- Ana Kategori ---</option>
                </select>
                <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Kaydet
                </button>
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
