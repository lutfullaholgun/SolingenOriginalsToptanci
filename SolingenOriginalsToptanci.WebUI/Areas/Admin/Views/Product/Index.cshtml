@model List<SolingenOriginalsToptanci.Models.Entities.Product>

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";  // Layout dosyanın yolu
    ViewData["Title"] = "Ürün Listesi";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ürün Adı</th>
            <th>Kategori</th>
            <th>Fiyat</th>
            <th>Resim</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Category?.Name</td>
                <td>@item.Price.ToString("C")</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="@item.Name" width="50" />
                    }
                    else
                    {
                        <span>Resim yok</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

