@using Microsoft.AspNetCore.Identity
@inject UserManager<SolingenOriginalsToptanci.Models.Entities.ApplicationUser> UserManager
@inject SignInManager<SolingenOriginalsToptanci.Models.Entities.ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Solingen Originals – El Sanatının Keskin Zirvesi</title>

    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@300;400;500;700&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            font-family: 'Jost', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #000 !important;
            color: white;
        }

        .container {
            max-width: 1200px;
            margin: auto;
            padding: 0 15px;
        }

        .main-header,
        .main-footer {
            background-color: #000;
            color: white;
            padding: 20px 0;
        }

            .main-header a,
            .main-footer a {
                color: white;
                text-decoration: none;
            }

        .main-nav ul {
            list-style: none;
            display: flex;
            gap: 20px;
            margin: 0;
            padding: 0;
        }

        .main-nav li {
            position: relative;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #222;
            color: white;
            min-width: 200px;
            padding: 10px;
            top: 100%;
            left: 0;
            z-index: 10;
            border-radius: 5px;
        }

            .dropdown-content a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 5px 10px;
            }

                .dropdown-content a:hover {
                    background-color: #444;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .hero-section {
            background: url('https://images.unsplash.com/photo-1610878164529-c9b8d924dac6?auto=format&fit=crop&w=1920&q=80') no-repeat center/cover;
            color: white;
            text-align: center;
            padding: 100px 20px;
        }

        .btn-primary,
        .btn-secondary {
            padding: 10px 20px;
            border: none;
            background-color: #c0392b;
            color: white;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            margin-top: 10px;
            border-radius: 5px;
        }

        .featured-products .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
        }

        .product-card {
            background: #111;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(255, 255, 255, 0.05);
            text-align: center;
            padding: 15px;
            color: white;
            transition: transform 0.3s ease;
        }

            .product-card:hover {
                transform: translateY(-5px);
            }

            .product-card img {
                max-width: 100%;
                border-radius: 8px;
                height: 200px;
                object-fit: cover;
            }

        .main-footer {
            margin-top: 50px;
            padding: 30px 0;
        }

        .footer-grid {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
        }

        .social-icons {
            display: flex;
            gap: 15px;
        }

            .social-icons a {
                font-size: 24px;
                color: white;
                transition: color 0.3s ease;
            }

                .social-icons a:hover {
                    color: #D4AF37;
                }

        /* Arama Popup Stilleri */
        .search-popup {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.95);
            z-index: 9999;
            justify-content: center;
            align-items: center;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

            .search-popup.active {
                display: flex;
                opacity: 1;
            }

        .search-popup-content {
            background: #111;
            padding: 40px;
            border-radius: 10px;
            width: 90%;
            max-width: 500px;
            position: relative;
            transform: translateY(-20px);
            transition: transform 0.3s ease;
        }

        .search-popup.active .search-popup-content {
            transform: translateY(0);
        }

        .search-popup-content input {
            padding: 15px;
            width: 100%;
            font-size: 1.2em;
            margin-bottom: 15px;
            background: #222;
            color: #fff;
            border: 1px solid #444;
            border-radius: 5px;
        }

        .btn-search {
            padding: 12px 25px;
            background-color: #D4AF37;
            color: #000;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            font-weight: bold;
            width: 100%;
            font-size: 1.1em;
            transition: background-color 0.3s ease;
        }

            .btn-search:hover {
                background-color: #b89529;
            }

        .search-popup-close {
            position: absolute;
            top: 15px;
            right: 20px;
            font-size: 1.8em;
            color: #fff;
            cursor: pointer;
            transition: color 0.3s ease;
        }

            .search-popup-close:hover {
                color: #D4AF37;
            }

        /* Sepet Stilleri */
        .cart-wrapper {
            position: relative;
        }

        .cart-dropdown {
            display: none;
            position: absolute;
            right: 0;
            background: #111;
            color: white;
            width: 320px;
            max-height: 400px;
            overflow-y: auto;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.5);
            z-index: 1000;
        }

            .cart-dropdown.active {
                display: block;
            }

        .cart-items {
            padding: 10px 0;
            min-height: 100px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .empty-cart-message {
            text-align: center;
            padding: 20px;
            color: #aaa;
            font-size: 0.9em;
        }

        .cart-count {
            position: absolute;
            top: -8px;
            right: -8px;
            background-color: #D4AF37;
            color: black;
            border-radius: 50%;
            width: 18px;
            height: 18px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 0.7em;
            font-weight: bold;
        }

        #go-to-cart-btn {
            width: 100%;
            padding: 12px;
            background-color: #D4AF37;
            color: black;
            font-weight: bold;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 15px;
            transition: background-color 0.3s ease;
        }

            #go-to-cart-btn:hover {
                background-color: #b89529;
            }

        /* Kullanıcı Menüsü */
        .user-menu {
            position: relative;
        }

        .user-dropdown {
            display: none;
            position: absolute;
            right: 0;
            background: #111;
            color: white;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.5);
            z-index: 1000;
            min-width: 200px;
        }

            .user-dropdown.active {
                display: block;
            }

            .user-dropdown p {
                margin: 0 0 10px 0;
                padding-bottom: 10px;
                border-bottom: 1px solid #333;
            }

            .user-dropdown button {
                background: none;
                border: none;
                color: white;
                cursor: pointer;
                width: 100%;
                text-align: left;
                padding: 5px 0;
                transition: color 0.3s ease;
            }

                .user-dropdown button:hover {
                    color: #D4AF37;
                }

        .header-icons {
            display: flex;
            gap: 20px;
            align-items: center;
        }

            .header-icons a {
                color: white;
                font-size: 1.2em;
                transition: color 0.3s ease;
            }

                .header-icons a:hover {
                    color: #D4AF37;
                }

        @@media (max-width: 768px) {
            .main-nav ul {
                flex-direction: column;
                gap: 10px;
            }

            .dropdown-content {
                position: static;
            }

            .container.nav-wrapper {
                flex-direction: column;
                gap: 15px;
            }

            .header-icons {
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <header class="main-header">
        <div class="container nav-wrapper" style="display: flex; justify-content: space-between; align-items: center;">
            <!-- Sol taraf: Logo -->
            <div class="logo">
                <a href="/">Solingen Originals <i class="fas fa-utensils"></i></a>
            </div>

            <!-- Orta: Menü -->
            <nav class="main-nav">
                <ul>
                    <li><a href="/" class="active">Ana Sayfa</a></li>
                    @await Component.InvokeAsync("CategoryMenu")
                    <li><a href="/Home/About">Hakkımızda</a></li>
                    <li><a href="/Home/Contact">İletişim</a></li>
                </ul>
            </nav>

            <!-- Sağ taraf: ikonlar ve mini sepet -->
            <div class="header-icons">
                <a href="#" id="search-icon"><i class="fas fa-search"></i></a>

                <div class="cart-wrapper">
                    <a href="#" id="cart-icon" style="position: relative;">
                        <i class="fas fa-shopping-cart"></i>
                        <span class="cart-count">0</span>
                    </a>
                    <div class="cart-dropdown">
                        <div class="cart-items">
                            <p class="empty-cart-message">Sepetiniz boş</p>
                        </div>
                        <button id="go-to-cart-btn">Sepete Git</button>
                    </div>
                </div>

                @if (SignInManager.IsSignedIn(User))
                {
                    var user = await UserManager.GetUserAsync(User);
                    <div class="user-menu">
                        <a href="#" id="user-icon"><i class="fas fa-user"></i></a>
                        <div class="user-dropdown">
                            <p>@user.Email</p>
                            <form method="post" action="/Account/Logout">
                                <button type="submit">Çıkış Yap</button>
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <div class="user-menu">
                        <a href="/Account/Login"><i class="fas fa-user"></i></a>
                    </div>
                }
            </div>
        </div>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <!-- Arama Popup -->
    <div class="search-popup" id="search-popup">
        <div class="search-popup-content">
            <form method="get" action="/Product/Search">
                <input id="search-input" type="text" name="query" placeholder="Ürün ara..." required autocomplete="off" />
                <button type="submit" class="btn-search" id="btn-search">Ara</button>
                <span class="search-popup-close" id="search-popup-close">&times;</span>
            </form>
        </div>
    </div>

    <footer class="main-footer">
        <div class="container footer-grid">
            <div class="footer-logo">
                <a href="#">Solingen Originals</a>
                <p>&copy; 2025 Tüm Hakları Saklıdır.</p>
            </div>

            <div class="footer-social-newsletter">
                <h3>Sosyal Medya</h3>
                <div class="social-icons">
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-pinterest"></i></a>
                    <a href="#"><i class="fab fa-youtube"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(function () {
            // Arama popup kontrolü
            const $searchPopup = $('#search-popup');
            const $searchIcon = $('#search-icon');
            const $searchClose = $('#search-popup-close');

            $searchIcon.on('click', function (e) {
                e.preventDefault();
                $searchPopup.addClass('active');
                $('#search-input').focus();
            });

            $searchClose.on('click', function (e) {
                e.preventDefault();
                $searchPopup.removeClass('active');
            });

            $(document).on('keydown', function (e) {
                if (e.key === "Escape") {
                    $searchPopup.removeClass('active');
                }
            });

            // Sepet dropdown kontrolü
            const $cartIcon = $('#cart-icon');
            const $cartDropdown = $('.cart-dropdown');

            $cartIcon.on('click', function (e) {
                e.preventDefault();
                $cartDropdown.toggleClass('active');
                $('.user-dropdown').removeClass('active');
            });

            // Kullanıcı dropdown kontrolü
            const $userIcon = $('#user-icon');
            const $userDropdown = $('.user-dropdown');

            $userIcon.on('click', function (e) {
                e.preventDefault();
                $userDropdown.toggleClass('active');
                $cartDropdown.removeClass('active');
            });

            // Sayfa dışında tıklama olursa dropdownları kapat
            $(document).on('click', function (e) {
                if (!$(e.target).closest('.cart-wrapper').length) {
                    $cartDropdown.removeClass('active');
                }
                if (!$(e.target).closest('.user-menu').length) {
                    $userDropdown.removeClass('active');
                }
                if (!$(e.target).closest('#search-icon').length &&
                    !$(e.target).closest('.search-popup-content').length) {
                    $searchPopup.removeClass('active');
                }
            });

            // Sepete git butonu
            $('#go-to-cart-btn').on('click', function () {
                window.location.href = '/Cart';
            });

            // Sepet sayacını sıfırla
            function updateCartCount(count) {
                $('.cart-count').text(count);
            }

            // Başlangıçta sepeti boş göster
            updateCartCount(0);
        });
    </script>
    <head>
        <!-- Diğer head içeriği -->
        @RenderSection("Styles", required: false)
    </head>

    @RenderSection("Scripts", required: false)
</body>
</html>