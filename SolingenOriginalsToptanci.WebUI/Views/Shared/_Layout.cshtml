@using Microsoft.AspNetCore.Identity
@inject UserManager<SolingenOriginalsToptanci.Models.Entities.ApplicationUser> UserManager
@inject SignInManager<SolingenOriginalsToptanci.Models.Entities.ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Solingen Originals – El Sanatının Keskin Zirvesi</title>

    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@300;400;500;700&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Jost', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #000 !important;
            color: white;
        }

        .container {
            max-width: 1200px;
            margin: auto;
            padding: 0 15px;
        }

        .main-header,
        .main-footer {
            background-color: #000;
            color: white;
            padding: 20px 0;
        }

            .main-header a,
            .main-footer a {
                color: white;
                text-decoration: none;
            }

        .main-nav ul {
            list-style: none;
            display: flex;
            gap: 20px;
            margin: 0;
            padding: 0;
        }

        .main-nav li {
            position: relative;
        }

        .dropdown-menu {
            background-color: #222;
            border: none;
            border-radius: 5px;
            padding: 10px;
        }

        .dropdown-item {
            color: white !important;
            padding: 5px 10px;
        }

            .dropdown-item:hover {
                background-color: #444 !important;
            }

        .hero-section {
            background: url('https://images.unsplash.com/photo-1610878164529-c9b8d924dac6?auto=format&fit=crop&w=1920&q=80') no-repeat center/cover;
            color: white;
            text-align: center;
            padding: 100px 20px;
        }

        .btn-primary,
        .btn-secondary {
            padding: 10px 20px;
            border: none;
            background-color: #c0392b;
            color: white;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            margin-top: 10px;
            border-radius: 5px;
        }

        .featured-products .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
        }

        .product-card {
            background: #111;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(255, 255, 255, 0.05);
            text-align: center;
            padding: 15px;
            color: white;
            transition: transform 0.3s ease;
        }

            .product-card:hover {
                transform: translateY(-5px);
            }

            .product-card img {
                max-width: 100%;
                border-radius: 8px;
                height: 200px;
                object-fit: cover;
            }

        .main-footer {
            margin-top: 50px;
            padding: 30px 0;
        }

        .footer-grid {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
        }

        .social-icons {
            display: flex;
            gap: 15px;
        }

            .social-icons a {
                font-size: 24px;
                color: white;
                transition: color 0.3s ease;
            }

                .social-icons a:hover {
                    color: #D4AF37;
                }

        /* Arama Popup Stilleri */
        .search-popup {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.95);
            z-index: 9999;
            justify-content: center;
            align-items: center;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

            .search-popup.active {
                display: flex;
                opacity: 1;
            }

        .search-popup-content {
            background: #111;
            padding: 40px;
            border-radius: 10px;
            width: 90%;
            max-width: 500px;
            position: relative;
            transform: translateY(-20px);
            transition: transform 0.3s ease;
        }

        .search-popup.active .search-popup-content {
            transform: translateY(0);
        }

        .search-popup-content input {
            padding: 15px;
            width: 100%;
            font-size: 1.2em;
            margin-bottom: 15px;
            background: #222;
            color: #fff;
            border: 1px solid #444;
            border-radius: 5px;
        }

        .btn-search {
            padding: 12px 25px;
            background-color: #D4AF37;
            color: #000;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            font-weight: bold;
            width: 100%;
            font-size: 1.1em;
            transition: background-color 0.3s ease;
        }

            .btn-search:hover {
                background-color: #b89529;
            }

        .search-popup-close {
            position: absolute;
            top: 15px;
            right: 20px;
            font-size: 1.8em;
            color: #fff;
            cursor: pointer;
            transition: color 0.3s ease;
        }

            .search-popup-close:hover {
                color: #D4AF37;
            }

        /* Sepet Stilleri */
        .cart-count {
            position: absolute;
            top: -8px;
            right: -8px;
            background-color: #D4AF37;
            color: black;
            border-radius: 50%;
            width: 18px;
            height: 18px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 0.7em;
            font-weight: bold;
        }

        #go-to-cart-btn {
            width: 100%;
            padding: 12px;
            background-color: #D4AF37;
            color: black;
            font-weight: bold;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 15px;
            transition: background-color 0.3s ease;
        }

            #go-to-cart-btn:hover {
                background-color: #b89529;
            }

        .header-icons {
            display: flex;
            gap: 20px;
            align-items: center;
        }

            .header-icons a {
                color: white;
                font-size: 1.2em;
                transition: color 0.3s ease;
            }

                .header-icons a:hover {
                    color: #D4AF37;
                }

        @@media (max-width: 768px) {
            .main-nav ul {
                flex-direction: column;
                gap: 10px;
            }

            .container.nav-wrapper {
                flex-direction: column;
                gap: 15px;
            }

            .header-icons {
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <header class="main-header">
        <div class="container nav-wrapper" style="display: flex; justify-content: space-between; align-items: center;">
            <!-- Sol taraf: Logo -->
            <div class="logo">
                <a href="/">Solingen Originals <i class="fas fa-utensils"></i></a>
            </div>

            <!-- Orta: Menü -->
            <nav class="main-nav">
                <ul>
                    <li><a href="/" class="active">Ana Sayfa</a></li>
                    @await Component.InvokeAsync("CategoryMenu")
                    <li><a href="/Home/About">Hakkımızda</a></li>
                    <li><a href="/Home/Contact">İletişim</a></li>
                </ul>
            </nav>

            <!-- Sağ taraf: ikonlar ve mini sepet -->
            <div class="header-icons">
                <!-- Arama İkonu (DÜZELTİLDİ) -->
                <a href="#" id="search-toggle" class="me-2">
                    <i class="fas fa-search"></i>
                </a>

                <!-- Sepet Dropdown -->
                <div class="dropdown">
                    <a href="#" id="cart-icon" data-bs-toggle="dropdown">
                        <i class="fas fa-shopping-cart"></i>
                        <span class="cart-count">0</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><p class="dropdown-item-text">Sepetiniz boş</p></li>
                        <li><a href="/Cart" class="dropdown-item">Sepete Git</a></li>
                    </ul>
                </div>

                <!-- Kullanıcı Dropdown -->
                @if (SignInManager.IsSignedIn(User))
                {
                    <div class="dropdown">
                        <a href="#" id="user-icon" data-bs-toggle="dropdown">
                            <i class="fas fa-user"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><span class="dropdown-item-text">@User.Identity?.Name</span></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form method="post" action="/Account/Logout" class="logout-form">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item">Çıkış Yap</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <a href="/Account/Login"><i class="fas fa-user"></i></a>
                }
            </div>
        </div>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <!-- Arama Popup (DÜZELTİLDİ - body sonuna taşındı) -->
    
        </div>
    </footer>

    @RenderSection("Styles", required: false)
    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
                        document.addEventListener('DOMContentLoaded', function () {
            const searchForm = document.getElementById('search-form');
            const searchInput = document.getElementById('search-input');
            const searchPopup = document.getElementById('search-popup');

            if (searchForm) {
                searchForm.addEventListener('submit', function (e) {
                    const val = searchInput.value.trim();
                    if (val === '') {
                        e.preventDefault();
                        alert('Lütfen arama terimi giriniz');
                        searchInput.focus();
                    }
                });
            }

            const searchToggle = document.getElementById('search-toggle');
            const searchClose = document.getElementById('search-close');

            if (searchToggle) {
                searchToggle.addEventListener('click', function (e) {
                    e.preventDefault();
                    searchPopup.classList.add('active');
                    searchInput.focus();
                });
            }

            if (searchClose) {
                searchClose.addEventListener('click', function (e) {
                    e.preventDefault();
                    searchPopup.classList.remove('active');
                });
            }

            document.addEventListener('keydown', function (e) {
                if (e.key === 'Escape') {
                    searchPopup.classList.remove('active');
                }
            });
        });

        // Sepet sayacı fonksiyonu dışarıda, fazladan kapanış parantezi yok
        function updateCartCount(count) {
            const cartCountElements = document.querySelectorAll('.cart-count');
            cartCountElements.forEach(el => {
                el.textContent = count;
            });
        }
    </script>

    <div class="search-popup" id="search-popup">
        <div class="search-popup-content">
            <form method="get" action="/Product/Search" id="search-form">
                <input type="text" name="query" id="search-input" placeholder="Ürün ara..." autocomplete="off" required>
                <button type="submit" class="btn-search">Ara</button>
                <span class="search-popup-close" id="search-close">&times;</span>
            </form>
        </div>
    </div>

    <footer class="main-footer">
        <div class="container footer-grid">
            <div class="footer-logo">
                <a href="#">Solingen Originals</a>
                <p>&copy; 2025 Tüm Hakları Saklıdır.</p>
            </div>

            <div class="footer-social-newsletter">
                <h3>Sosyal Medya</h3>
                <div class="social-icons">
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-pinterest"></i></a>
                    <a href="#"><i class="fab fa-youtube"></i></a>
                </div>
            </div>

</body>
</html>