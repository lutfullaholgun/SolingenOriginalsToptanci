@model List<SolingenOriginalsToptanci.Models.Entities.Product>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Ürünler";
}

<h1 class="mb-4">Bıçak Ürünleri</h1>

@if (!Model.Any())
{
    <p class="text-muted">Henüz ürün eklenmemiş.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height:200px; object-fit:cover;" />
                    }
                    else
                    {
                        <svg class="bd-placeholder-img card-img-top" width="100%" height="200" xmlns="http://www.w3.org/2000/svg"
                             role="img" aria-label="Placeholder" preserveAspectRatio="xMidYMid slice" focusable="false">
                            <title>Resim Yok</title>
                            <rect width="100%" height="100%" fill="#868e96"></rect>
                            <text x="50%" y="50%" fill="#dee2e6" dy=".3em" text-anchor="middle">Resim Yok</text>
                        </svg>
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-truncate">@product.Description</p>
                        <div class="mt-auto">
                            <strong class="text-primary fs-5">@product.Price.ToString("C")</strong>
                        </div>
                    </div>
                    <div class="card-footer text-center">
                        <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="btn btn-sm btn-outline-primary w-100">
                            Detayları Gör
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
